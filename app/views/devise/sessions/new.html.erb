<div class="col-sm-4 mx-auto">
  <header>
    <h2><%= t(:'Log in') %></h2>
  </header>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="devise-container">
      <div class="row">
        <div class="notice"><%= notice %></div>
        <div class="alert error"><%= alert %></div>
      </div>
      <div class="row">
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control", required: true %>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <%= f.label :password, (t(:'Password')) %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control", required: true %>
        </div>
      </div>
      <div class="row">
        <div class="form-group actions">
          <% if devise_mapping.rememberable? -%>
            <div class="field pull-left">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, (t(:'Remember me')) %>
            </div>
          <% end -%>
          <div class="pull-right">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
    <%= f.submit (t(:'Log in')), class: "btn btn-lg btn-primary" %>
  <% end %>
</div>
