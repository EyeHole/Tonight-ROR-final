<p id="notice"><%= notice %></p>

<h1><%= t(:'Event') %></h1>
<p>
  <strong><%= t(:'Name') %>:</strong>
  <%= @event.name %>
</p>

<p>
  <strong><%= t(:'Event starts (GMT+3 Moscow)') %>:</strong>
  <%= @event.start_date.strftime('%m.%d.%Y %H:%M') %>
</p>

<p>
  <strong><%= t(:'Event ends (GMT+3 Moscow)') %>:</strong>
  <%= @event.end_date.strftime('%m.%d.%Y %H:%M') %>
</p>

<p>
  <strong><%= t(:'Description') %>:</strong>
  <%= @event.description %>
</p>

<p>
  <strong><%= t(:'Visitors') %>:</strong>
  <% @user_emails.each do |user_email| %>
    <p><%= user_email %></p>
  <% end %>
</p>
<% if @event.user_id == current_user %>
  <%= link_to (t(:'Edit')), edit_event_path(@event), class: "btn btn-warning"  %>
<% end %>
