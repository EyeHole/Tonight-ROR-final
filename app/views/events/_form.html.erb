<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <p><%= pluralize(@event.errors.count, "error") %> <%= t(:'prohibited this event from being saved') %>:</p>
      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="form-group col-md-4">
      <%= f.label :name, (t(:'Name'))%><br>
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-4">
      <%= f.label :start_date, (t(:'Event starts (GMT+3 Moscow)')) %><br>
      <%= f.datetime_field :start_date, 
                        min: Date.today,
                        class: "form-contol",
                        required: true %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-4">
      <%= f.label :end_date, (t(:'Event ends (GMT+3 Moscow)')) %><br>
      <%= f.datetime_field :end_date, 
                        min: Date.today,
                        class: "form-contol",
                        required: true %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-4">
      <%= f.label :description, (t(:'Description')) %><br>
      <%= f.text_area :description, class: "form-control", required: true %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit (t(:'Create')), class: "btn btn-primary" %>
  </div>
<% end %>